{
  "manifest_version": 3,
  "name": "Music Mode for YouTubeâ„¢",
  "short_name": "Music Mode",
  "version": "1.3.16",
  "default_locale": "en",
  "incognito":"spanning",
  
  "description": "__MSG_extDescription__",

  "browser_specific_settings": {
    "gecko": {
      "id": "{e960c19a-b3ce-477c-8a0d-d82959225dee}",
      "strict_min_version": "142.0",
      "data_collection_permissions": {
        "required": ["none"]
      }
    },
    "gecko_android": {
      "strict_min_version": "142.0"
    }
  },

  "icons": {
    "19": "img/logo/icon19.png",
    "38": "img/logo/icon38.png",
    "48": "img/logo/icon48.png",
    "128": "img/logo/icon128.png"
  },
  "commands": {
    "run_extension_tab": {
      "suggested_key": {
        "default": "Ctrl+Up",
        "mac": "Command+Up"
      },
      "description": "__MSG_command1Description__"
    }
  },
  "background": {
    "scripts": [
      "js/background.js"
    ]
  },
  "permissions": [
    "declarativeNetRequest",
    "tabs",
    "storage",
    "unlimitedStorage"
  ],
  "options_ui": {
    "open_in_tab": true,
    "page": "pages/options.html"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "css/ads.css",
        "css/ads_mobile.css",
        "css/channel_avatars.css",
        "css/channel_avatars_mobile.css",
        "css/channel_avatars_YTMusic.css",
        "css/others.css",
        "css/others_mobile.css",
        "css/others_YTMusic.css",
        "css/video_thumbnails.css",
        "css/video_thumbnails_mobile.css",
        "css/video_thumbnails_YTMusic.css",
        "css/video.css",
        "css/video_mobile.css",
        "js/video_handler.js",
        "js/video_quick_access_button.js",
        "js/adSkipper.js",
        "content_popup/style.css",
        "config.js"
      ],
      "matches": [ 
        "*://www.youtube.com/*",
        "*://music.youtube.com/*",
        "*://m.youtube.com/*",
        "*://www.youtube-nocookie.com/*"
       ]
    }, {
      "resources": [ 
        "img/logo/logo_only.svg",
        "img/avatar-chanell.svg",
        "img/youtube_logo.svg",
        "img/photo.jpg",
        "img/photoCom.jpg",
        "img/logo/full_logo.svg",
        "img/youtubeImages/default.jpg"
      ],
      "matches": [ 
        "<all_urls>"
       ]
    }
  ],
  "action": {
    "default_title": "Music Mode for YouTube",
    "default_popup": "popup/popup.html"
  },
  "content_scripts": [{
      "matches": [
        "*://www.youtube.com/*",
        "*://music.youtube.com/*",
        "*://m.youtube.com/*",
        "*://www.youtube-nocookie.com/*"
      ],
      "css":[
        "css/content.css"
      ],
      "js": [
        "js/content_ytb.js",
        "content_popup/content.js"
      ],
      "run_at": "document_start",
      "all_frames": true
    }, {
      "matches": [
        "*://m.youtube.com/*"
      ],
      "js": [
        "js/content_mytb.js"
      ],
      "run_at": "document_end",
      "all_frames": true
    }
  ]
}
